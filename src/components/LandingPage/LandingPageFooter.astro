---
import FooterCommonLinksList from '../Footer/FooterCommonLinksList.astro'
import LandingImageAttribution from './LandingImageAttribution.astro'
---

<footer>
	<h2 class='sr-only'>Footer links</h2>
	<FooterCommonLinksList />
	<LandingImageAttribution />
</footer>

<style>
	footer {
		background-color: var(--bewebdev-purple);
		color: var(--theme-text);
		padding: 20px;
		z-index: var(--overlay-high);
		position: relative;
	}
	footer ul {
		list-style: none;
		display: flex;
		flex-wrap: wrap;
	}
	footer ul li {
		display: inline-block;
		margin-right: 20px;
	}
	footer ul li a {
		color: var(--theme-text);
	}
</style>
