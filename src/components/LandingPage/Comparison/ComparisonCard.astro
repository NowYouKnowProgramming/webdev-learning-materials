---
export type Props = {
	name: string
	downside: string
	icon: string
}

const { name, downside, icon }: Props = Astro.props
---

<li class='side-by-side'>
	<div>
		<p class='card-title'>{name}</p>
		<p>{downside}</p>
	</div>
	<div class='icon'>{icon}</div>
</li>

<style>
	.side-by-side {
		display: flex;
		justify-content: space-between;
		gap: 1rem;
		align-items: center;
	}

	li {
		background-image: linear-gradient(
			45deg,
			var(--bewebdev-pink-saturated),
			var(--bewebdev-purple-saturated)
		);
		padding: 1rem;
		border-radius: 1rem;
	}

	li * {
		color: var(--theme-text);
	}

	.card-title {
		margin: 0;
		font-size: 1.8rem;
		font-weight: bold;
		font-family: var(--font-special);
	}

	.icon {
		font-size: 5rem;
	}
</style>
