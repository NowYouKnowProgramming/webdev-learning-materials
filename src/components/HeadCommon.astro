---
import '../styles/index.css'
import '../styles/themes/tailwind.css'

const experimentalOptions = { importance: 'high' }
---

<!-- Global Metadata -->
<meta charset='utf-8' />
<meta name='viewport' content='width=device-width' />
<meta name='generator' content={Astro.generator} />

<link rel='icon' type='image/svg+xml' href='/favicon.ico' />

<link rel='sitemap' href='/sitemap.xml' />

<!-- Fonts -->
<link
	rel='preload'
	href='/fonts/Nunito-Italic-VariableFont_wght.woff2'
	as='font'
	type='font/woff2'
	{...experimentalOptions}
/>

<link
	rel='preload'
	href='/fonts/Nunito-VariableFont_wght.woff2'
	as='font'
	type='font/woff2'
	{...experimentalOptions}
/>

<link
	rel='preload'
	href='/fonts/Inter-Regular.woff2'
	as='font'
	type='font/woff2'
	{...experimentalOptions}
/>

<!-- Scrollable a11y code helper -->
<script src='/make-scrollable-code-focusable.js' is:inline></script>

<!-- This is intentionally inlined to avoid FOUC -->
<script is:inline>
const root = document.documentElement
const theme = localStorage.getItem('theme')
if (theme === 'oled') {
	root.classList.add('theme-oled')
	root.classList.remove('theme-dark')
} else {
	root.classList.remove('theme-oled')
}
if (
	theme === 'dark' ||
	(!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)
) {
	root.classList.add('theme-dark')
} else {
	root.classList.remove('theme-dark')
}
</script>

<!-- Google tag (gtag.js) -->
<script async src='https://www.googletagmanager.com/gtag/js?id=G-76TJGCMRYN'
></script>
<script is:inline>
window.dataLayer = window.dataLayer || []
function gtag() {
	dataLayer.push(arguments)
}
gtag('js', new Date())
gtag('config', 'G-76TJGCMRYN')
</script>
