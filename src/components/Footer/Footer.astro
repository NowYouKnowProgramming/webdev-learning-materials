---
import AvatarList from './AvatarList.astro';
import FooterCommonLinksList from './FooterCommonLinksList.astro';
type Props = {
	path: string;
};
const { path } = Astro.props as Props;
---

<footer>
	<AvatarList path={path} />
	<FooterCommonLinksList />
</footer>

<style>
	footer {
		margin-top: auto;
		padding: 2rem;
		border-top: 3px solid var(--theme-divider);
		display: flex;
		flex-direction: row;
		gap: 1rem;
		align-items: center;
	}
</style>
