<style is:global lang='scss'>
	.heading-wrapper {
		display: flex;
		align-items: center;
		margin-bottom: 1rem;
		flex-wrap: wrap;
		gap: 1em;
		h1,
		h2,
		h3,
		h4,
		h5,
		h6 {
			margin: 0;
			width: fit-content;
		}

		button.heading-copy {
			opacity: 0;
			transition: opacity 0.2s ease-in-out;
			cursor: pointer;
		}
		&:hover {
			button.heading-copy {
				opacity: 1;
			}
		}
	}
</style>

<script>
	import { createHeadingWrapper, getHeadingsFromDocument } from './helpers'

	const headings = getHeadingsFromDocument()

	headings.forEach((heading) =>
		heading.replaceWith(createHeadingWrapper(heading))
	)
</script>
